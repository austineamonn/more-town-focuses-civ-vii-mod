<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--	Generic Modifiers							-->
	<!-- ==================================================	-->
	<Modifier id="TRAIT_MOD_TOWN_LABOR_CAMP_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<!-- Must be a conquered settlement -->
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement inverse="true" type="REQUIREMENT_CITY_IS_ORIGINAL_OWNER"/>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_LABOR_CAMP</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_RIVER_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<!-- The city hall must be adjacent to a navigable river -->
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_PLOT_ADJACENT_TO_RIVER">
				<Argument name="Navigable">true</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_RIVER</Argument>
	</Modifier>
