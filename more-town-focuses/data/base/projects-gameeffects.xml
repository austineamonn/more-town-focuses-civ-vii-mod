<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- Labor Camp -->
	<Modifier id="NEG_HAPPINNESS_DOUBLE_YIELDS_FROM_PROJECT" collection="COLLECTION_OWNER" effect="EFFECT_ATTACH_MODIFIERS">
		<Argument name="ModifierId">ATTACH_NEG_HAPPINESS_FROM_PROJECT, ATTACH_DOUBLE_RURAL_YIELDS_IN_CITY_FROM_PROJECT</Argument>
	</Modifier>
	<Modifier id="ATTACH_NEG_HAPPINESS_FROM_PROJECT" collection="COLLECTION_OWNER" effect="EFFECT_CITY_ADJUST_CONSTRUCTIBLE_YIELD">
		<Argument name="ConstructibleType">BUILDING_CITY_HALL</Argument>
		<Argument name="YieldType">YIELD_HAPPINESS</Argument>
		<Argument name="Amount" type="ScaleByGameAge" extra="100">-5</Argument>
		<Argument name="Tooltip">LOC_PROJECT_TOWN_LABOR_CAMP_NAME</Argument>
	</Modifier>
	<Modifier id="ATTACH_DOUBLE_RURAL_YIELDS_IN_CITY_FROM_PROJECT" collection="COLLECTION_CITY_PLOT_YIELDS" effect="EFFECT_PLOT_ADJUST_YIELD">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_PLOT_DISTRICT_CLASS">
				<Argument name="DistrictClass">RURAL, WILDERNESS</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="YieldType">YIELD_FOOD, YIELD_PRODUCTION, YIELD_GOLD, YIELD_SCIENCE, YIELD_CULTURE, YIELD_DIPLOMACY</Argument>
		<Argument name="Apply">Rate</Argument>
		<Argument name="Percent">50</Argument>
		<Argument name="Tooltip">LOC_PROJECT_TOWN_LABOR_CAMP_NAME</Argument>
	</Modifier>
	<!-- Fort Town -->
	<Modifier id="FORT_HEALING_FROM_PROJECT_MTF" collection="COLLECTION_OWNER" effect="EFFECT_ATTACH_MODIFIERS">
		<Argument name="ModifierId">ATTACH_FORT_HEALING_FROM_PROJECT, ATTACH_FORT_HEALTH_FROM_PROJECT, ATTACH_FORT_WALLS_FROM_PROJECT, ATTACH_FORT_UNIT_PURCHASING_FROM_PROJECT</Argument>
	</Modifier>
	<Modifier id="ATTACH_FORT_UNIT_PURCHASING_FROM_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_ADJUST_PLAYER_OR_CITY_UNIT_PURCHASE_EFFICIENCY">
		<Argument name="Percent">10</Argument>
		<Argument name="UnitTag">UNIT_CLASS_COMBAT</Argument>
	</Modifier>
</GameEffects>