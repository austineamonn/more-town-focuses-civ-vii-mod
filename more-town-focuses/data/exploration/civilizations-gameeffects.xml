<?xml version="1.0" encoding="utf-8"?>
<GameEffects xmlns="GameEffects">
	<!-- ==================================================	-->
	<!--	Generic Modifiers							-->
	<!-- ==================================================	-->
	<Modifier id="TRAIT_MOD_TOWN_TREASURE_COLONY_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<!-- Must be distant lands w/ a worked treasure resource -->
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_IS_DISTANT_LANDS"/>
			<Requirement type="REQUIREMENT_CITY_HAS_RESOURCE">
				<Argument name="ResourceClassType">RESOURCECLASS_TREASURE</Argument>
				<Argument name="All">false</Argument>
				<Argument name="Produced">true</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_TREASURE_COLONY</Argument>
	</Modifier>
	<Modifier id="TRAIT_MOD_TOWN_PROTECTORATE_PROJECT" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_CITY_UNLOCK_PROJECT">
		<!-- Must be distant lands and conquered -->
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_IS_DISTANT_LANDS"/>
			<Requirement inverse="true" type="REQUIREMENT_CITY_IS_ORIGINAL_OWNER"/>
		</SubjectRequirements>
		<Argument name="ProjectType">PROJECT_TOWN_PROTECTORATE</Argument>
	</Modifier>
	<!-- Treasure Fleet Modifiers - placed here to ensure they don't multiply for each town with the specialty -->
	<Modifier id="TRAIT_MOD_TOWN_TREASURE_COLONY_PROJECT_TF" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_ADJUST_CITY_AUTO_TREASURE_FLEET">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_IS_DISTANT_LANDS"/>
			<Requirement type="REQUIREMENT_CITY_HAS_PROJECT">
				<Argument name="ProjectType">PROJECT_TOWN_TREASURE_COLONY</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="VP">1</Argument>
	</Modifier>
	<!-- Protectorate -->
	<Modifier id="TRAIT_MOD_TOWN_PROTECTORATE_PROJECT_TF" collection="COLLECTION_PLAYER_CITIES" effect="EFFECT_ADJUST_CITY_AUTO_TREASURE_FLEET">
		<SubjectRequirements>
			<Requirement type="REQUIREMENT_CITY_IS_TOWN"/>
			<Requirement type="REQUIREMENT_CITY_IS_DISTANT_LANDS"/>
			<Requirement type="REQUIREMENT_CITY_HAS_PROJECT">
				<Argument name="ProjectType">PROJECT_TOWN_PROTECTORATE</Argument>
			</Requirement>
		</SubjectRequirements>
		<Argument name="VP">3</Argument>
	</Modifier>
</GameEffects>